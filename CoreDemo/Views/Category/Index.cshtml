@using EntityLayer.Concrete
@model List<Category>

@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Durumu</th>
        <th>Detaylar</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.CategoryID</th>
    <th>@item.CategoryName</th>
    <th>@item.CategoryStatus</th>
    <th><a href="#" class="btn btn-warning">Detaylar</a></th>
    <th><a href="#" class="btn btn-danger">Sil</a></th>
</tr>
    }
</table>
